@model IEnumerable<Assignment.Models.Courses>

@{
    ViewData["Title"] = "Courses";
}

<div class="dashboard-buttons">
    <form asp-controller="Dashboard" asp-action="Index" method="get">
        <button type="submit" class="btn btn-primary">Go Back to the Dashboard</button>
    </form>
</div>

<h1>Courses</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<form asp-controller="Courses" asp-action="Index" method="get" class="form-inline mb-3">
    <p>
        Course Title: <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control" />
        <button type="submit" class="btn btn-primary ms-2">Search</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Reset</a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Credits)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.Credits)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Title" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Title" class="btn btn-info btn-sm ms-1">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Title" class="btn btn-danger btn-sm ms-1">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>