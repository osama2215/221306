<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assignment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assignment.styles.css" asp-append-version="true" />
<style>
    /* Ensure full-height layout so footer doesn't overlap or clip content */
    html, body {
        height: 100%;
    }

    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background-color: #f8f9fa;
        font-family: "Segoe UI", Roboto, sans-serif;
        margin: 0;
    }

    /* Make the main content area grow to fill available space */
    .main-container {
        flex: 1 0 auto;
        padding-bottom: 1rem; /* extra breathing room so content won't touch footer */
    }

    /* Ensure footer doesn't overlap and stays at bottom */
    footer {
        flex-shrink: 0;
    }

    /* Navbar */
    .navbar {
        background-color: #0d6efd !important; /* Bootstrap primary blue */
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    }

    .navbar-brand, .nav-link {
        color: white !important;
        font-weight: 500;
    }

    .navbar-brand:hover, .nav-link:hover {
        color: #dfe9ff !important;
    }

    /* Buttons */
    .btn-primary {
        background-color: #6491ed;
        border-color: #0d6efd;
        transition: all 0.2s ease;
    }

    .btn-primary:hover {
        background-color: #0d6efd;
        border-color: #0a58ca;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    /* Tables */
    table {
        border-radius: 8px;
        overflow: hidden;
    }

    thead {
        background-color: #0d6efd;
        color: black;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    /* Cards */
    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    /* Center content spacing */
    .container {
        margin-top: 30px;
    }
</style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand"> School Manager </a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Log in/out</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <div class="container main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Assignment - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
